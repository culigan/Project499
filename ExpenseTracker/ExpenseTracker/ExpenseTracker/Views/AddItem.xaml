<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ExpenseTracker.AddItem">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="1" 
                    Text="Add/Edit Transactions"
                    HorizontalOptions="Center"
                    FontSize="22" />
                <Label Grid.Row="2" 
                     Margin="20,20,20,0"
                     HorizontalOptions="Center"
                     WidthRequest="250"
                     IsEnabled="True"
                     Text="Account Type:"/>
                <Label Grid.Row="3" 
                     x:Name="AccountTypeLabel"
                     Margin="20,0,20,0"
                     Text="{Binding AccountType}"
                     HorizontalOptions="Center"
                     WidthRequest="250"
                     IsEnabled="True"/>
                <Label Grid.Row="4"
                    Margin="20,20,20,0"
                    Text="Account Name:"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="250"
                    FontSize="16" />
                <Label Grid.Row="5" 
                     x:Name="AccountPicker"
                     Margin="20,0,20,0"
                     Text="{Binding AccountName}"
                     HorizontalOptions="Center"
                     WidthRequest="250"
                     IsEnabled="True"/>
                <Label Grid.Row="6"
                    Margin="20,20,20,0"
                    Text="Income Account:"
                    IsVisible="{Binding InAccVisible}"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="250"
                    FontSize="16" />
                <Picker Grid.Row="7" 
                     x:Name="IncomePicker"
                     Margin="20,0,20,0"
                     ItemsSource="{Binding IncomeAccountList}"
                     SelectedItem="{Binding IncomeAccount, Mode=TwoWay}"
                     IsVisible="{Binding InAccVisible}"
                     HorizontalOptions="Center"
                     WidthRequest="250"
                     IsEnabled="True"/>
                <Label Grid.Row="8"
                    Margin="20,20,20,0"
                    Text="Category:"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="250"
                    FontSize="16" />
                <Picker Grid.Row="9" 
                     x:Name="CategoryPicker"
                     Margin="20,0,20,0"
                     ItemsSource="{Binding CategoryList}"
                     SelectedItem="{Binding Category}"
                     HorizontalOptions="Center"
                     WidthRequest="250"
                     IsEnabled="True"/>
                <Label Grid.Row="10"
                    Margin="20,20,20,0"
                    x:Name="TransAmountEntry"
                    Text="Transaction Amount"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="250"
                    FontSize="16"/>
                <Entry Grid.Row="11" 
                    Margin="20,0,20,0"
                    IsSpellCheckEnabled="false" 
                    Keyboard="Numeric"
                    HorizontalOptions="Center"
                    WidthRequest="250"
                    Placeholder="0.00"
                    Text="{Binding TransAmount}"/>
                <Label Grid.Row="12"
                    Margin="20,20,20,0"
                    x:Name="transName"
                    Text="Transaction Name"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="250"
                    FontSize="16"/>
                <Entry Grid.Row="13" 
                    Margin="20,0,20,0"
                    IsSpellCheckEnabled="false" 
                    HorizontalOptions="Center"
                    WidthRequest="250"
                    Placeholder="Transaction Name"
                    Text="{Binding TransName}"/>
                <Grid Grid.Row="14" Margin="20,20,20,20">
                    <Button Grid.Column="0" Margin="20" 
                            x:Name="saveButton"
                    HorizontalOptions="End"
                    Clicked="OnSaveButtonClicked"
                    WidthRequest="200"
                    Text="Save"/>
                    <Button Grid.Column="1"
                    Margin="20"                   
                    HorizontalOptions="Start"
                    Clicked="OnCancelButtonClicked"
                    WidthRequest="200"
                    Text="Cancel"/>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>